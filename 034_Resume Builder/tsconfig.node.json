{
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noEmit": true,
    
    /* Node-specific */
    "types": ["node"],
    "target": "ES2022",
    "lib": ["ES2023"]
  },
  "include": [
    "vite.config.ts",
    "package.json"
  ]
}